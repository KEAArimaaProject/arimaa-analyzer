@page "/loadgamemanual"


    <p>Page to load games manually from Arimaa.com</p>
    <div class="mb-3">
        <label for="gameNotation" class="form-label">Enter Arimaa game notation:</label>
        <div class="input-group">
            <textarea id="gameNotation" class="form-control" rows="15" @bind="GameNotation" placeholder="Paste the full game notation here..."></textarea>
        </div>
    </div>
    
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="LoadGame">Load Game</button>
    </div>
    
    @if (LoadedGame != null)
    {
    <h5>Loaded Game:</h5>
    <pre class="border p-3 bg-light">@LoadedGame</pre>
    }

@code {
    private string? GameNotation { get; set; }
    private string? LoadedGame { get; set; }

    private void LoadGame()
    {
        // Basic trimming - you can add validation later if needed
        LoadedGame = GameNotation?.Trim();
        
        // Optional: Clear the input after loading
        // GameNotation = string.Empty;
    }

}