@page "/loadgamemanual"
@using YourApp.Models
@using ArimaaAnalyzer.Maui.Services


    <p>Page to load games manually from Arimaa.com</p>
    <div class="mb-3">
        <label for="gameNotation" class="form-label">Enter Arimaa game notation:</label>
        <textarea id="gameNotation" class="form-control" rows="15" @bind="GameNotation"
                  placeholder="Paste the full game notation here..."></textarea>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" @onclick="LoadGame">Load Game</button>
    </div>

    @if (ErrorMessages?.Count > 0)
    {
        <div class="alert alert-danger">
            <strong>Validation errors:</strong>
            <ul>
                @foreach (var err in ErrorMessages)
                {
                    <li>@err</li>
                }
            </ul>
        </div>
    }

    @if (LoadedGame != null)
    {
        <h5>Loaded Game (@LoadedGame.Moves.Length moves):</h5>
        <pre class="border p-3 bg-light" style="max-height: 500px; overflow-y: auto;">@LoadedGame.RawNotation</pre>
    }

@code {
    private string? GameNotation { get; set; }
    private ArimaaGameService? LoadedGame { get; set; }
    private List<string> ErrorMessages { get; set; } = new();

    private void LoadGame()
    {
        ErrorMessages.Clear();
        LoadedGame = null;
        var input = GameNotation ?? string.Empty;
        var result = NotationService.ValidatePastedGame(input);
        if (!result.IsValid)
        {
            ErrorMessages.AddRange(result.Errors);
            return;
        }

        LoadedGame = new ArimaaGameService(input);
    }

}