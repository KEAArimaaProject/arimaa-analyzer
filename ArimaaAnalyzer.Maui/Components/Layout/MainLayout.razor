@inherits LayoutComponentBase
@using ArimaaAnalyzer.Maui.Components
@using ArimaaAnalyzer.Maui.Services
@using ArimaaAnalyzer.Maui.Services.Arimaa
@using System.Linq
@using System.Collections.Generic
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.JSInterop
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ArimaaGameService Game
@inject AnalysisService Analysis
@implements IDisposable

<div class="page">
    <NavMenu/>

    <main class="page-wrapper">
        <div class="top-row px-4">
            <label for="nav-toggle" class="burger-button" title="Open menu" aria-label="Open navigation menu"></label>
            @if (IsOnArimaaPage)
            {
                <!-- Current game quick info (takes lowest priority in flex; shrinks before buttons) -->
                <div class="current-game-info" title="Current game summary">
                    @if (Game?.SelectedRecord is { } r)
                    {
                        <span class="cg-item start">@FormatDate(r.StartTs)</span>
                        <span class="cg-sep">•</span>
                        <span class="cg-item result">@FormatSide(r.ResultSide)</span>
                        <span class="cg-sep">•</span>
                        <span class="cg-item gold" title="Gold">@NullSafe(r.WUsername)</span>
                        <span class="cg-item rating gold-rating">(@FormatInt(r.WRating))</span>
                        <span class="cg-sep">vs</span>
                        <span class="cg-item silver" title="Silver">@NullSafe(r.BUsername)</span>
                        <span class="cg-item rating silver-rating">(@FormatInt(r.BRating))</span>
                        <span class="cg-sep">•</span>
                        <span class="cg-item time" title="Time control">@NullSafe(r.TimeControl)</span>
                    }
                    else
                    {
                        <span class="cg-empty">No game selected</span>
                    }
                </div>
                <button class="analyze-position" @onclick="AnalyzePosition" disabled="@_analysisInProgress">
                    Analyze Position
                </button>
                <button class="toggle-outer-ui" @onclick="ToggleOuterUi">
                    Toggle Outer UI (@(_sharedSettings.ShowOuterUi ? "On" : "Off"))
                </button>
            }
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content">
            <CascadingValue Value="_sharedSettings">
                @Body
            </CascadingValue>
        </article>
    </main>
</div>

@code {
    private readonly ArimaaBoardSettings _sharedSettings = ArimaaBoardSettings.PlayableLarge;

    private bool _analysisInProgress;

    private async Task AnalyzePosition()
    {
        if (_analysisInProgress) return;
        _analysisInProgress = true;
        try
        {
            await JS.InvokeVoidAsync("eval", "console.log('AnalyzePosition: invoked')");
            var isOnArimaa = IsOnArimaaPage;
            await JS.InvokeVoidAsync("eval", $"console.log('AnalyzePosition: IsOnArimaaPage=' + {System.Text.Json.JsonSerializer.Serialize(isOnArimaa)})");
            await JS.InvokeVoidAsync("eval", $"console.log('AnalyzePosition: Nav.Uri=' + {System.Text.Json.JsonSerializer.Serialize(Nav?.Uri ?? "null")})");

            if (Game is null)
            {
                await JS.InvokeVoidAsync("eval", "console.error('AnalyzePosition: Game service is null (DI not available).')");
                return;
            }
            if (Game.State is null)
            {
                await JS.InvokeVoidAsync("eval", "console.error('AnalyzePosition: Game.State is null.')");
                return;
            }
            // Take the root directly from the active GameState's CurrentNode
            var root = Game?.State?.CurrentNode;
            if (root is null)
            {
                await JS.InvokeVoidAsync("eval", "console.warn('AnalyzePosition: No CurrentNode available in game state.')");
                return;
            }

            await JS.InvokeVoidAsync("eval", "console.log('AnalyzePosition: calling BuildGameTurnTreeAsync(depth=3) with CurrentNode')");
            var generatedRoot = await Analysis.BuildGameTurnTreeAsync(root, searchDepth: 3);

            // Build a simple string from the generated main-line children chain
            var parts = new List<string>();
            GameTurn? node = generatedRoot;
            var nodeIndex = 0;
            while (node is not null)
            {
                if (node.Moves is { Count: > 0 })
                {
                    parts.Add(string.Join(' ', node.Moves));
                    await JS.InvokeVoidAsync("eval", $"console.log('AnalyzePosition: node['+{nodeIndex}+'] moves=' + {System.Text.Json.JsonSerializer.Serialize(string.Join(" ", node.Moves))})");
                }
                node = node.Children.FirstOrDefault();
                nodeIndex++;
            }
            var movesText = string.Join("\n", parts);
            await JS.InvokeVoidAsync("eval", $"console.log('AnalyzePosition: collected '+{parts.Count}+' lines; injecting into #aiMovesInput')");

            // Replace the textarea content with id="aiMovesInput"
            var js = $"(function(){{var el=document.getElementById('aiMovesInput'); if(el) el.value={System.Text.Json.JsonSerializer.Serialize(movesText)};}})()";
            await JS.InvokeVoidAsync("eval", js);
            await JS.InvokeVoidAsync("eval", "console.log('AnalyzePosition: textarea updated.')");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("eval", $"console.error('AnalyzePosition failed: '+ {System.Text.Json.JsonSerializer.Serialize(ex.Message)})");
        }
        finally
        {
            _analysisInProgress = false;
        }
    }
    
    private bool IsOnArimaaPage =>
        Nav is not null &&
        Uri.TryCreate(Nav.Uri, UriKind.Absolute, out var uri) &&
        string.Equals(uri.AbsolutePath.TrimEnd('/'), "/arimaa", StringComparison.OrdinalIgnoreCase);

    protected override void OnInitialized()
    {
        Nav.LocationChanged += OnLocationChanged;
        if (Game is not null)
        {
            Game.SelectedRecordChanged += OnSelectedRecordChanged;
        }
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        // Re-render so the conditional button shows/hides when navigating
        InvokeAsync(StateHasChanged);
    }

    private void OnSelectedRecordChanged()
    {
        // Update header info when a new record is selected
        InvokeAsync(StateHasChanged);
    }

    private void ToggleOuterUi()
    {
        _sharedSettings.ShowOuterUi = !_sharedSettings.ShowOuterUi;
        // Components reading this setting will update on next render
        StateHasChanged();
    }

    // Local format helpers (mirror GameRecordList formatting)
    private static string NullSafe(string? s) => string.IsNullOrWhiteSpace(s) ? "—" : s!;
    private static string FormatInt(int? v) => v.HasValue ? v.Value.ToString() : "—";
    private static string FormatSide(GameRecord.Side? side)
        => side switch
        {
            GameRecord.Side.Gold => "Gold",
            GameRecord.Side.Silver => "Silver",
            _ => "—"
        };
    private static string FormatDate(DateTimeOffset? dto)
    {
        if (dto is null) return "—";
        var local = dto.Value.ToLocalTime();
        return local.ToString("yyyy-MM-dd HH:mm");
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
        if (Game is not null)
        {
            Game.SelectedRecordChanged -= OnSelectedRecordChanged;
        }
    }
}